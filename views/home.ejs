 <h1><%=title%></h1>
 <section id="feed-posts">
    <h4>Posts</h4>
    <%if(locals.user){%>
    <form id="new-post-form" action="/posts/create" method="post">
        <textarea name="content" rows="3" cols="30" required></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>
    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
                
            <li>
                <p>
                    <%= post.content %>
                    <br>
                    <small>
                        <%= post.user.name %>
                    </small>
                </p>
                
            </li>
                
            <%} %>
        </ul>
    </div>
 </section>
   
